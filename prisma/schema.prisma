// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Student {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  groupUnit Int
  password  String
  notes     Note[]
  summaries Summary[]
  comment   Comment[]
}

model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  password String
}

model Note {
  id        Int      @id @default(autoincrement())
  text      String
  student   Student  @relation(fields: [studentId], references: [id])
  studentId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Summary {
  id        Int      @id @default(autoincrement())
  title     String
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  student   Student  @relation(fields: [studentId], references: [id])
  studentId Int
}

model Module {
  id        Int         @id @default(autoincrement())
  title     String
  subject   String
  text      String
  commens   Comment[]
  assigment Assigment[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  student   Student  @relation(fields: [studentId], references: [id])
  studentId Int
  module    Module   @relation(fields: [moduleId], references: [id])
  moduleId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Assigment {
  id        Int      @id @default(autoincrement())
  title     String
  text      String
  module    Module   @relation(fields: [moduleId], references: [id])
  moduleId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
